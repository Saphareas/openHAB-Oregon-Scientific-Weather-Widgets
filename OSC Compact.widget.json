{
    "name": "Oregon Scientific Compact",
    "author": "Fabian 'Saphareas' Gro√üe",
    "description": "Weather widget that can display temperature, humidity and optionally pressure and wind speed",
    "settings": [
        {
            "type": "string",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "item",
            "id": "temperature",
            "label": "Temperature"
        },
        {
            "type": "item",
            "id": "humidity",
            "label": "Humidity"
        },
        {
            "type": "checkbox",
            "id": "show_pressure",
            "label": "Show pressure",
            "default": false
        },
        {
            "type": "item",
            "id": "pressure",
            "label": "Pressure"
        },
        {
            "type": "checkbox",
            "id": "show_wind_speed",
            "label": "Show wind speed",
            "default": false
        },
        {
            "type": "item",
            "id": "wind_speed",
            "label": "Wind Speed"
        },
        {
            "type": "checkbox",
            "id": "show_low_battery",
            "label": "Show low battery warning",
            "default": false
        },
        {
            "type": "item",
            "id": "low_battery",
            "label": "Low Battery"
        },
        {
            "type": "string",
            "id": "target_dashboard",
            "label": "Target dashboard"
        }
    ],
    "template": "<style>\n    .osc-maximize {\n      height: 100%;\n      width: 100%;\n    }\n    .osc-body {\n      display: grid;\n      grid-template-areas:\n        \"title bat_warn\"\n        \"t_icon t_value\"\n        \"h_icon h_value\"\n        \"p_icon p_value\"\n        \"w_icon ws_value\";\n      grid-template-columns: 50% 50%;\n      grid-template-rows: min-content repeat(4, 1fr);\n      align-items: center;\n    }\n    .osc-title {\n      grid-area: title;\n      grid-column: 1 / span 2;\n      text-align: left;\n      margin-top: 0;\n      align-self: start;\n      font-size: 150%;\n    }\n    .osc-value {\n      font-size: 1.75rem;\n      text-align: left;\n    }\n  </style>\n  \n  <a href=\"#/view/{{config.target_dashboard}}\"><main class=\"osc-maximize osc-body\" osc-lazy-load=\"['/static/habpanel_oscwidget_maximize.js']\">\n    <h3 class=\"osc-title\">{{config.title}}</h3>\n  \n    <span style=\"grid-area: t_icon\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'temperature'\" /></span>\n    <span style=\"grid-area: t_value\" class=\"osc-value\">{{'%.1f' | sprintf:itemValue(config.temperature).split(' ')[0]}}&nbsp;{{itemValue(config.temperature).split(' ')[1]}}</span>\n    <span style=\"grid-area: h_icon\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'drop'\" /></span>\n    <span style=\"grid-area: h_value\" class=\"osc-value\">{{'%.1f' | sprintf:itemValue(config.humidity).split(' ')[0]}}&nbsp;%</span>\n    <span style=\"grid-area: p_icon\" ng-if=\"config.show_pressure == true\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'thermostat'\" /></span>\n    <span style=\"grid-area: p_value\" class=\"osc-value\" ng-if=\"config.show_pressure == true\">{{'%.1f' | sprintf:itemValue(config.pressure).split(' ')[0]}}&nbsp;{{itemValue(config.pressure).split(' ')[1]}}</span>\n    <span style=\"grid-area: w_icon\" ng-if=\"config.show_wind_speed == true\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'ventilation'\" /></span>\n    <span style=\"grid-area: ws_value\" class=\"osc-value\" ng-if=\"config.show_wind_speed == true\">{{'%.1f' | sprintf:itemValue(config.wind_speed).split(' ')[0]}}&nbsp;{{itemValue(config.wind_speed).split(' ')[1]}}</span>\n  </main></a>\n"
}
