{
    "name": "Oregon Scientific Compact",
    "author": "Fabian 'Saphareas' Gro√üe",
    "description": "Weather widget that can display temperature, humidity and optionally pressure and wind speed",
    "settings": [
        {
            "type": "item",
            "id": "temperature",
            "label": "Temperature"
        },
        {
            "type": "item",
            "id": "humidity",
            "label": "Humidity"
        },
        {
            "type": "checkbox",
            "id": "show_pressure",
            "label": "Show pressure",
            "default": false
        },
        {
            "type": "item",
            "id": "pressure",
            "label": "Pressure"
        },
        {
            "type": "checkbox",
            "id": "show_wind_speed",
            "label": "Show wind speed"
        },
        {
            "type": "item",
            "id": "wind_speed",
            "label": "Wind Speed"
        },
        {
            "type": "checkbox",
            "id": "show_low_battery",
            "label": "Show low battery warning",
            "default": false
        },
        {
            "type": "item",
            "id": "low_battery",
            "label": "Low Battery",
            "default": ""
        },
        {
            "type": "string",
            "id": "font_size",
            "label": "Font Size",
            "default": "4",
            "description": "in rem"
        },
        {
            "type": "checkbox",
            "default": true,
            "id": "colored_text",
            "label": "Colored values"
        },
        {
            "type": "string",
            "id": "target",
            "label": "Target dashboard",
            "default": ""
        }
    ],
    "template": "<style>  \n  .osc.compact.body {    \n    grid-template-areas:\n      \"title bat_warn\"\n      \"t_icon t_value\"\n      \"h_icon h_value\"\n      \"p_icon p_value\"\n      \"w_icon w_value\";\n    grid-template-columns: 3fr 4fr;\n    grid-template-rows: min-content repeat(4, auto);    \n  }  \n  .osc.compact.value {\n    font-size: {{config.font_size}}rem;\n    text-align: left;\n  }\n  .osc.compact.temp {\n    grid-area: t_value;\n    color: {{config.colored_text == true ? 'var(--osc-red)' : 'inherit'}}\n  }\n  .osc.compact.hum {\n    grid-area: h_value;\n    color: {{config.colored_text == true ? 'var(--osc-blue)' : 'inherit'}}\n  }\n  .osc.compact.press {\n    grid-area: p_value;\n    color: {{config.colored_text == true ? 'var(--osc-green)' : 'inherit'}}\n  }\n  .osc.compact.wind {\n  \tgrid-area: w_value;\n  \tcolor: {{config.colored_text == true ? 'var(--osc-yellow)' : 'inherit'}}\n  }\n  .osc.widget img[src^=\"/icon/wi_\"] {\n  \t filter: invert(60%) sepia(100%) hue-rotate(185deg) saturate(1000%); \n  }\n</style>\n\n<div class=\"osc widget maximize\" oc-lazy-load=\"['/static/habpanel_oscwidget_maximize.js', '/static/habpanel_oscwidget_style.css']\">\n<a ng-href=\"{{'#/view/%s' | sprintf:config.target}}\">\n  <main class=\"osc compact body maximize \" ng-controller=\"ngMaximizeWidgetContent\">\n \t\t<h3 class=\"osc title\">{{ngModel.name}}</h3>  \n    <span class=\"osc low-bat\" ng-if=\"config.show_low_battery == true && itemvalue(config.low_battery) == true\">\n      <widget-icon iconset=\"'eclipse-smarthome-classic'\" icon=\"'lowbattery'\"/>\n    </span>\n    <span style=\"grid-area: t_icon\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'temperature'\" size=\"32\"/></span>\n    <span class=\"osc compact value temp\">\n      {{'%.1f' | sprintf:itemValue(config.temperature).split(' ')[0]}}&nbsp;{{itemValue(config.temperature).split(' ')[1]}}\n    </span>\n    <span style=\"grid-area: h_icon\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'drop'\" size=\"32\"/></span>\n    <span class=\"osc compact value hum\">\n      {{'%.1f' | sprintf:itemValue(config.humidity).split(' ')[0]}}&nbsp;%\n    </span>\n    <span style=\"grid-area: p_icon\" ng-if=\"config.show_pressure == true\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'thermostat'\" size=\"32\"/></span>\n    <span class=\"osc compact value press\" ng-if=\"config.show_pressure == true\">\n      {{'%.0f' | sprintf:itemValue(config.pressure).split(' ')[0]}}&nbsp;{{itemValue(config.pressure).split(' ')[1]}}\n    </span>\n    <span style=\"grid-area: w_icon\" ng-if=\"config.show_wind_speed == true\"><widget-icon iconset=\"'custom-icon'\" icon=\"'wi_strong_wind'\" size=\"32\"/></span>\n    <span class=\"osc compact value wind\" ng-if=\"config.show_wind_speed == true\">\n      {{'%.1f' | sprintf:itemValue(config.wind_speed).split(' ')[0]}}&nbsp;{{itemValue(config.wind_speed).split(' ')[1]}}\n    </span>\n  </main>\n</a>\n</div>\n\n",
    "source_url": "https://raw.githubusercontent.com/Saphareas/openHAB-Oregon-Scientific-Weather-Widgets/master/OSC%20Compact.widget.json",
    "readme_url": "https://github.com/Saphareas/openHAB-Oregon-Scientific-Weather-Widgets"
}