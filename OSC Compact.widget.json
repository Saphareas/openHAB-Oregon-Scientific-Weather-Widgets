{
    "name": "Oregon Scientific Compact",
    "author": "Fabian 'Saphareas' Gro√üe",
    "description": "Weather widget that can display temperature, humidity and optionally pressure and wind speed",
    "settings": [
        {
            "type": "item",
            "id": "temperature",
            "label": "Temperature"
        },
        {
            "type": "icon",
            "id": "t_icon",
            "label": "Symol"
        },
        {
            "type": "color",
            "id": "t_color",
            "label": "Color",
            "default": "255,0,0"
        },
        {
            "type": "item",
            "id": "humidity",
            "label": "Humidity"
        },
        {
            "type": "icon",
            "id": "h_icon",
            "label": "Symol"
        },
        {
            "type": "color",
            "id": "h_color",
            "label": "Color",
            "default": "0,0,255"
        },
        {
            "type": "checkbox",
            "id": "show_pressure",
            "label": "Show pressure",
            "default": false
        },
        {
            "type": "item",
            "id": "pressure",
            "label": "Pressure"
        },
        {
            "type": "icon",
            "id": "p_icon",
            "label": "Symol"
        },
        {
            "type": "color",
            "id": "p_color",
            "label": "Color",
            "default": "0,255,0"
        },
        {
            "type": "checkbox",
            "id": "show_wind_speed",
            "label": "Show wind speed"
        },
        {
            "type": "item",
            "id": "wind_speed",
            "label": "Wind Speed"
        },
        {
            "type": "icon",
            "id": "w_icon",
            "label": "Symol"
        },
        {
            "type": "color",
            "id": "w_color",
            "label": "Color",
            "default": "0,255,255"
        },
        {
            "type": "checkbox",
            "id": "show_low_battery",
            "label": "Show low battery warning",
            "default": false
        },
        {
            "type": "item",
            "id": "low_battery",
            "label": "Low Battery",
            "default": ""
        },
        {
            "type": "string",
            "id": "target",
            "label": "Target dashboard",
            "default": ""
        }
    ],
    "template": "<style>\n  .osc-maximize {\n    height: 100%;\n    width: 100%;\n  }\n  .osc-body {\n    display: grid;\n    grid-template-areas:\n      \"title bat_warn\"\n      \"t_icon t_value\"\n      \"h_icon h_value\"\n      \"p_icon p_value\"\n      \"w_icon w_value\";\n    grid-template-columns: 50% 50%;\n    grid-template-rows: min-content repeat(4, auto);\n    align-items: center;\n  }\n  .osc-title {\n    grid-area: title;\n    grid-column: 1 / span 2;\n    text-align: left;\n    margin-top: 0;\n    align-self: start;\n    font-size: 150%;\n  }\n  .osc-value {\n    font-size: 1.75rem;\n    text-align: left;\n  }\n  .osc-temp {\n    grid-area: t_value;\n    color: {{config.t_color}}\n  }\n  .osc-hum {\n    grid-area: h_value;\n    color: {{config.h_color}}\n  }\n  .osc-press {\n    grid-area: p_value;\n    color: {{config.p_color}}\n  }\n  .osc-wind {\n  \tgrid-area: w_value;\n  \tcolor: {{config.w_color}}\n  }\n  .osc-low-bat { grid-area: bat_warn; }\n  .osc-low-bat img { float: right; }\n</style>\n\n<div class=\"osc-widget osc-maximize\" oc-lazy-load=\"['/static/habpanel_oscwidget_maximize.js']\">\n<a ng-href=\"{{'#/view/%s' | sprintf:config.target}}\">\n  <main class=\"osc-maximize osc-body\" ng-controller=\"ngMaximizeWidgetContent\">\n \t\t<h3 class=\"osc-title\">{{ngModel.name}}</h3>  \n    <span style=\"grid-area: t_icon\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'temperature'\"/></span>\n    <span class=\"osc-value osc-temp\">{{'%.1f' | sprintf:itemValue(config.temperature).split(' ')[0]}}&nbsp;{{itemValue(config.temperature).split(' ')[1]}}</span>\n    <span style=\"grid-area: h_icon\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'drop'\"/></span>\n    <span class=\"osc-value osc-hum\">{{'%.1f' | sprintf:itemValue(config.humidity).split(' ')[0]}}&nbsp;%</span>\n    <span style=\"grid-area: p_icon\" ng-if=\"config.show_pressure == true\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'thermostat'\"/></span>\n    <span class=\"osc-value osc-press\" ng-if=\"config.show_pressure == true\">{{'%.0f' | sprintf:itemValue(config.pressure).split(' ')[0]}}&nbsp;{{itemValue(config.pressure).split(' ')[1]}}</span>\n    <span style=\"grid-area: w_icon\" ng-if=\"config.show_wind_speed == true\"><widget-icon iconset=\"'smarthome-set'\" icon=\"'ventilation'\"/></span>\n    <span class=\"osc-value osc-wind\" ng-if=\"config.show_wind_speed == true\">{{'%.1f' | sprintf:itemValue(config.wind_speed).split(' ')[0]}}&nbsp;{{itemValue(config.wind_speed).split(' ')[1]}}</span>\n    <span class=\"osc-low-bat\" ng-if=\"config.show_low_battery == true && itemvalue(config.low_battery) == true\"><widget-icon iconset=\"'eclipse-smarthome-classic'\" icon=\"'lowbattery'\"/></span>\n  </main>\n</a>\n</div>\n\n",
    "source_url": "https://raw.githubusercontent.com/Saphareas/openHAB-Oregon-Scientific-Weather-Widgets/master/OSC%20Compact.widget.json",
    "readme_url": "https://github.com/Saphareas/openHAB-Oregon-Scientific-Weather-Widgets"
}
